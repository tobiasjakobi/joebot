# Compiler
CC=g++
# Parameters given to the compiler
CFLAGS=-s -mwindows -O3 
# Output filename (*.exe)
OUTPUT="Project 1.exe"

# Source files
SRCS="WinMain.cpp" "Dialog.cpp"
# Output object files (*.o)
OBJS="WinMain.o" "Dialog.o" "rsrc.o"

# Standard targets

all: compile_res
	$(CC) -c $(SRCS) $(CFLAGS)
	$(CC) -o $(OUTPUT) $(OBJS) $(CFLAGS)

compile_res:
	windres -I rc -O coff -i "p.rc" -o "rsrc.o"

test: all
	./$(OUTPUT)

clean:
	del *.o

mrproper: clean

